<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:background="@drawable/product_bg"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_productImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@drawable/carrots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/textView_productTitle"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="Carrots"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_productPrice"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_favorite"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageButton_favorite"
                app:layout_constraintVertical_chainStyle="spread" />

            <ImageButton
                android:id="@+id/imageButton_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:background="#00000000"
                app:layout_constraintBottom_toTopOf="@+id/imageButton_addToCart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView_productTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/textView_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Rs18/kg"
                android:textColor="@color/category_active_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/imageButton_addToCart"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_productTitle" />

            <ImageButton
                android:id="@+id/imageButton_addToCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_add_shopping_cart_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_productPrice"
                app:layout_constraintTop_toBottomOf="@+id/imageButton_favorite" />

            <TextView
                android:id="@+id/textView_productOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Rs16/kg"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_productPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</LinearLayout>