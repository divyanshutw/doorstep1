<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category">
        <Preference
            app:key="myAccount"
            app:summary="Make change to your account"
            app:title="My Account"
            />
        <Preference
            app:key="savedAddress"
            app:summary="Manage your saved address"
            app:title="Saved Address"
            />
        <Preference
            app:key="savedPaymentOptions"
            app:summary="Manage your saved payment options"
            app:title="Saved Payments"
            />
        <Preference
            app:key="logout"
            app:summary="Log out of the application"
            app:title="Log Out"
            />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>
</PreferenceScreen>